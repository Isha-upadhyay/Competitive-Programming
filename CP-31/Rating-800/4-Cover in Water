#include <iostream>
using namespace std;


int main() {

  int t;

  cin >> t;

  while(t--) {

    int n;

    string s;

    cin >> n >> s; 

    bool continuous_three_empty_cell = false;

    int total_count_of_empty_cells = 0;

    for(int i = 0; i < n; i++) {

      if(i + 2 < n && s[i] == '.' && s[i + 1] == '.' && s[i + 2] == '.') {

        continuous_three_empty_cell = true;

        break;

      }

      if(s[i] == '.') {

        total_count_of_empty_cells++;

      }

    }

    if(continuous_three_empty_cell) 

      cout << 2 << endl;

    else 

      cout << total_count_of_empty_cells << endl;
  }

  return 0;

}
