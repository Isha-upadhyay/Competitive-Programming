#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int t;
    cin >> t;
    while (t--) {
        int n;
        cin >> n;
        vector<int> a(n);
        for (int i = 0; i < n; i++) cin >> a[i];
 
        int total_2 = count(a.begin(), a.end(), 2);
        int left_2 = 0;
        int ans = -1;
 
        for (int k = 0; k < n - 1; k++) {
            if (a[k] == 2) left_2++;
            int right_2 = total_2 - left_2;
 
            if (left_2 == right_2) {
                ans = k + 1;  // +1 because k is 0-indexed
                break;
            }
        }
        cout << ans << endl;
    }
}
