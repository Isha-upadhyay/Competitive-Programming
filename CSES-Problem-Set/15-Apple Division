#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n;
    cin >> n;
    vector<long long> p(n);
    long long total = 0;
    for (int i = 0; i < n; i++) {
        cin >> p[i];
        total += p[i];
    }

    long long ans = LLONG_MAX;
    int limit = 1 << n;

    for (int mask = 0; mask < limit; mask++) {
        long long subset_sum = 0;
        for (int i = 0; i < n; i++) {
            if (mask & (1 << i)) {
                subset_sum += p[i];
            }
        }
        long long diff = llabs(total - 2 * subset_sum);
        ans = min(ans, diff);
    }

    cout << ans << "\n";
    return 0;
}
