#include <iostream>
using namespace std;

const int MOD = 1e9 + 7;

long long power(long long base, long long exp, long long mod)
{
    long long res = 1;

    while (exp > 0)
    {
        if (exp % 2 == 1)
        {
            res = (res * base) % mod;
        }

        base = (base * base) % mod;
        exp /= 2;
    }
    return res;
}

int main(){
    int n;
    cin >> n;

    cout << power(2, n, MOD) << endl;

    return 0;
}
